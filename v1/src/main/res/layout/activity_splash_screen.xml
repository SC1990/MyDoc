<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_doc_background">

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/splashGif"
        android:layout_width="150dp"
        android:layout_height="139dp"
        android:layout_above="@+id/splashLogo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/doc"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="63dp" />


    <TextView
        android:id="@+id/splashLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginBottom="194dp"
        android:text="@string/mydoc"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="32sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splashGif" />

</RelativeLayout>