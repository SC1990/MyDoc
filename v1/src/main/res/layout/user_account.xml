<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="166dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="109dp"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/doc_icon"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="16dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="368dp"
        android:layout_height="7dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="33dp"
        android:background="@color/colorAccent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="145dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="347dp"
        android:layout_height="59dp"
        android:layout_alignEnd="@+id/divider"
        android:layout_alignParentTop="true"
        android:layout_marginTop="221dp"
        android:layout_marginEnd="-2dp"
        android:background="@color/colorAccent"
        android:text="@string/book_appointment"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="183dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="347dp"
        android:layout_height="59dp"
        android:layout_alignStart="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="212dp"
        android:background="@color/colorAccent"
        android:text="@string/medical_history"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="277dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="347dp"
        android:layout_height="59dp"
        android:layout_alignEnd="@+id/divider"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="136dp"
        android:background="@color/colorAccent"
        android:text="@string/search_doctors"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="363dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="347dp"
        android:layout_height="59dp"
        android:layout_alignEnd="@+id/divider"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="63dp"
        android:background="@color/colorAccent"
        android:text="@string/upcoming_appointments"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="448dp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="368dp"
        android:layout_height="7dp"
        android:layout_alignEnd="@+id/button6"
        android:layout_alignParentTop="true"
        android:layout_marginTop="138dp"
        android:background="@color/colorAccent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="531dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="163dp"
        android:text="@string/welcome_john"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>